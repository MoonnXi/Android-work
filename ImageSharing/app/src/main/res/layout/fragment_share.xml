<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listBackGround"
    tools:context=".fragment.ShareFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll_space"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/deep_blue">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="写分享"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_share_space"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/ll_space">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="标题"
                android:textSize="20sp"
                android:padding="15dp"
                android:background="@drawable/rounded_title_edittext"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@null"
                android:hint="分享这一刻的想法..."
                android:textColorHint="#888888"
                android:gravity="top"
                android:padding="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/et_title"/>

            <LinearLayout
                android:id="@+id/rl_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/et_content">

                <GridView
                    android:id="@+id/gv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numColumns="3" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:background="@color/listBackGround"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/rl_image"
                android:src="@drawable/ic_add"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text=" 保存 "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_login_button"
            android:layout_below="@id/rl_content" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text=" 发布 "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_login_button"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/rl_content" />

    </RelativeLayout>

</FrameLayout>